@code {
    [Parameter]
    public EventCallback<bool> OnSidebarClose { get; set; }

    [Parameter]
    public bool IsMobileView { get; set; }

    private Task OnNavLinkClicked(bool isMobile)
    {
        if (isMobile)
        {
            return OnSidebarClose.InvokeAsync(true);
        }
        return Task.CompletedTask;
    }
}
